@{
    ViewData["Title"] = "Crear producto";
}
@model Producto

<div class="container mt-5">

    <div class="row">
        <div class="col">
            <h1>Crear producto</h1>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col">
            <a class="d-flex float-start btn btn-primary" asp-controller="Productos" asp-action="Index">Regresar</a>     
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <form asp-action="Crear" method="post">
                <div class="form-group">
                    <label asp-for="Nombre">Nombre:</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Descripcion">Descripci√≥n:</label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Precio">Precio:</label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Cantidad">Cantidad:</label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="FechaVencimiento">Fecha de vencimiento:</label>
                    <input asp-for="FechaVencimiento" class="form-control" />
                    <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="ImagenURL">Url de imagen:</label>
                    <input asp-for="ImagenURL" class="form-control" />
                    <span asp-validation-for="ImagenURL" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="UsuarioId">Id del usuario:</label>
                    <input asp-for="UsuarioId" class="form-control" asp-format="{0:yyyy-MM-dd}"/>
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>
                <button class="btn btn-primary mt-3">Crear nuevo producto</button>
            </form>
        </div>
    </div>

</div>