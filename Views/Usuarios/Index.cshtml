@{
    ViewData["Title"] ="Usuarios";
}

<div class="container mt-5">

    <div class="row">
        <div class="col">
            <h1>Lista de usuarios</h1>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col">
            <a class="d-flex float-start btn btn-primary" >Crear usuario</a><!--asp-controller="Users" asp-action="Crear"-->
            <form class="d-flex float-end" role="search">
                <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Buscar</button>
            </form>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombres</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">Teléfono</th>
                        <th scope="col">Fecha de nacimiento</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var usuario in Model)
                {
                    <tr class="align-middle">
                        <th scope="row">@usuario.Id</th>
                        <td>@usuario.Nombres</td>
                        <td>@usuario.Apellidos</td>
                        <td>@usuario.Correo</td>
                        <td>@usuario.Direccion</td>
                        <td>@usuario.Telefono</td>
                        <td>@usuario.FechaNacimiento.ToString("dd/MM/yyyy")</td>   
                        <td>
                            <a class="btn btn-sm btn-primary" asp-controller="Usuarios" asp-action="Detalles" asp-route-id="@usuario.Id">Detalles</a>
                            <a class="btn btn-sm btn-warning" asp-controller="Usuarios" asp-action="Detalles" asp-route-id="@usuario.Id">Editar</a>
                            <a class="btn btn-sm btn-danger" asp-controller="Usuarios" asp-action="Eliminar" asp-route-id="@usuario.Id">Eliminar</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>