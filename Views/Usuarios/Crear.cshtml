@{
    ViewData["Title"] = "Crear usuario";
}
@model Usuario

<div class="container mt-5">

    <div class="row">
        <div class="col">
            <h1>Crear usuario</h1>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col">
            <a class="d-flex float-start btn btn-primary" asp-controller="Usuarios" asp-action="Index">Regresar</a>     
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <form asp-action="Crear" method="post">
                <div class="form-group">
                    <label asp-for="Nombres">Nombres:</label>
                    <input asp-for="Nombres" class="form-control" />
                    <span asp-validation-for="Nombres" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Apellidos">Apellidos:   </label>
                    <input asp-for="Apellidos" class="form-control" />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Correo">Correo electrónico:</label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Direccion">Dirección:</label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Telefono">Teléfono:</label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="FechaNacimiento">Fecha de nacimiento:</label>
                    <input asp-for="FechaNacimiento" class="form-control" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>
                <button class="btn btn-primary mt-3">Crear</button>
            </form>    
        </div>
    </div>

</div>

